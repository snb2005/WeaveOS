# Environment Configuration for Weave OS Backend

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/weave-os
MONGODB_TEST_URI=mongodb://localhost:27017/weave-os-test

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=50000000
UPLOAD_TIMEOUT=300000
ALLOWED_FILE_TYPES=*

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5177,http://localhost:3000
ENABLE_CORS_CREDENTIALS=true

# Default User Configuration
DEFAULT_STORAGE_QUOTA=5368709120
MAX_USERNAME_LENGTH=30
MIN_PASSWORD_LENGTH=8

# GridFS Configuration
GRIDFS_BUCKET_NAME=weave-files
GRIDFS_CHUNK_SIZE_BYTES=261120

# Logging Configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=true

# Optional: Email Configuration (for password reset)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
