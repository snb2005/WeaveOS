# Server Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/weave-os

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5177,http://localhost:3000
ENABLE_CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Configuration (if using JWT)
JWT_SECRET=your-jwt-secret-change-this-in-production
JWT_EXPIRATION=24h

# Cloudinary Configuration (if using Cloudinary for media)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Other optional configurations
LOG_LEVEL=info
